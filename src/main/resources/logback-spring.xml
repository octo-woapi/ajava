<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <logger name="com.octo.ajava.AjavaApplication" additivity="false" level="INFO">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.springframework.boot.web" additivity="false" level="INFO">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>